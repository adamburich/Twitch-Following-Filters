{
  "manifest_version": 3,
  "name": "Twitch Following Filters",
  "description": "Adds the ability to sort and filter your followed channels on Twitch.",
  "version": "1.0",
  "icons": {
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitch.tv/directory/following/*"
      ],
      "js": ["content.js", "filtering.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "cookies"],
  "host_permissions": [
    "https://*.twitch.tv/*"
  ]
}